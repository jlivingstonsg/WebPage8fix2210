@model ComputerViewModel
@{
    ViewBag.Title = "Computer Web Shop | Brand Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/styles/slider.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/bootstrap-slider.js")"></script>

<section>
    <div class="container">
        @*<div class="col-md-4 col-sm-4">
                <div class="seller-leftbox text-center">
                    <b>Kr 10 </b> <input id="ex2" type="text" class="span2" value="" data-slider-min="10" data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]" /> <b>€ 1000</b>
                </div>
                <div class="seller-leftbox text-center">
                    </div>
            </div>*@

        <div class="col-md-8 col-sm-8">

            <div class="container">
                <div class="hpanel forum-box">
                    <div class="col-md-12 col-sm-6" style="padding-bottom: 10px;"> <img src="@Url.Content("~/images/sam-small.png")" class="img-responsive"> </div>
                    <div class="col-md-4 col-sm-6">
                        <img src="@Model.Computer.ImageUrl" )" class="img-responsive">
                        <div class="row p-lg" style="padding-left: 0px !important;">
                            <div class="col-md-7">
                                <button type="button" class="btn btn-success btn-lg btn-block">Lägg i kundvagn</button>
                            </div>
                            @*<div class="col-md-5 text-right"><h3 class="no-margins font-extra-bold text-success">$750.90</h3></div>*@
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6">
                        <div class="seller-leftbox">
                            <div class="m-b-md">
                                <h3 class="font-bold">Specifikationer</h3>
                                <small></small>
                            </div>
                            <div class="lsit ">
                                <div class="well well-sm">
                                    <p>Name: @Model.Computer.Name</p>
                                    <p>Hard disk: @Model.Computer.HardDisk</p>
                                    <p>Has pen and touch : @Model.Computer.PenAndTouch</p>
                                    <p>Processor : @Model.Computer.Processor</p>
                                    <p>RAM : @Model.Computer.RAM</p>
                                    <p>System type: @Model.Computer.SystemType</p>
                                    <p>Price : @Model.Computer.Price</p>
                                </div>

                            </div>

                        </div>



                        <div></div>
                    </div>
                    <div class="col-md-8 col-sm-6" style="padding-top: 10px;">
                        @*<div class="col-lg-12">*@
                        <div class="hpanel plan-box active">
                            <div class="panel-heading hbuilt">
                                <h5 class="font-bold no-margins">Recensions</h5>
                            </div>
                            <div class="well well-sm">
                                @foreach (var review in @Model.Computer.Reviews)
                                {
                                    <p>@review.Text</p>
                                }
                            </div>
                            @*</div>*@
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</section>

<script>
    $(document).ready(function () {
        $("#ex2").slider({});
    });
</script>