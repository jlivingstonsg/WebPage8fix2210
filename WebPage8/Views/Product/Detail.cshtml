@model ComputerViewModel

@{
    ViewBag.Title = "Computer Web Shop | Brand Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section headerSection {
    @Html.Partial("_LayoutHeader")

}
<section>
    <div class="container">
        <div class="col-md-8 col-sm-8">

            <div class="container">
                <div class="hpanel forum-box">
                    @*<div class="col-md-12 col-sm-12" style="padding-bottom: 10px;"> <img src="@Url.Content("~/images/sam-small.png")" class="img-responsive"> </div>*@
                    <div class="col-md-4 col-sm-6">
                        <img src="@Model.Computer.ImageUrl" class="img-responsive">
                        <div class="col-md-5">
                            <h4 class="font-extra-bold text-success"> @Model.Computer.Price kr</h4>
                        </div>
                        <div class="row p-lg" style="padding-left: 0px !important;">
                            <div class="col-md-12">
                                <a asp-controller="Product" asp-action="BrandItems" asp-route-name="@Model.Computer.Category.Name">
                                    <div class="col-sm-6 text-left">
                                        <button type="button" onclick="goBack()" class="btn btn-success w-xs pull-left">Tillbaka</button>
                                    </div>
                                </a>
                                <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-computerId="@Model.Computer.ComputerId">
                                    <div class="col-sm-6 text-right">
                                        <button type="button" class="btn w-xs btn-success pull-right">Lägg i kundvagn</button>
                                    </div>
                                </a>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-8 col-sm-6">
                        <div class="seller-leftbox">
                            <div class="m-b-md">
                                <h3 class="font-bold">Specifikationer</h3>
                                <small></small>
                            </div>
                            <div class="lsit ">
                                <div class="well well-sm">
                                    <h5>@Model.Computer.Category.Name</h5>
                                    <p>@Model.Computer.ScreenSize </p>
                                    <p>@Model.Computer.Processor</p>
                                    <p>@Model.Computer.SystemType</p>
                                    <p>@Model.Computer.HardDisk Hard disk</p>
                                    <p>@Model.Computer.RAM RAM</p>

                                </div>
                            </div>
                        </div>
                        <div></div>
                    </div>
                    <div class="col-md-12 col-sm-12" style="padding-top: 10px;">
                        <div class="hpanel plan-box active">
                            <div class="panel-heading hbuilt">
                                <h5 class="font-bold no-margins">Recensions</h5>
                            </div>
                            <div class="well well-sm">                              
                                <form asp-controller="Review" asp-action="Create" method="post">
                                    <input asp-for="Computer.ComputerId" name="id" type="hidden" class="me-4" />
                                    <label>You can write your comments here</label>
                                    <br />
                                    <input asp-for="Review.Text" type="text" />
                                    <input type="submit" class="btn btn-secondary me-4" value="Post">
                                    <input type="button" class="btn btn-secondary me-4" value="Cancel" id="reset" onclick="clear()">
                                </form>                                
                            </div>
                            <div class="well well-sm">
                                <div>
                                    @foreach (Review review in @Model.Computer.Reviews)
                                    {

                                        <div class="pl-4 review">
                                            <img src="~/images/reviewImage.png" class="pr-4 img-thumbnail reviewImage" />
                                            <span class="pl-4">@review.Text</span>
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
</section>

