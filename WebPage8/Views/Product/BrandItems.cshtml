@model ComputerViewModel

@{
    ViewBag.Title = "Computer Web Shop | Brand Items";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/styles/slider.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/bootstrap-slider.js")"></script>

<section>
    <div class="container">
        <div class="col-md-4 col-sm-4">
            <div class="seller-leftbox text-center">
                <b>€ 10</b> <input id="ex2" type="text" class="span2" value="" data-slider-min="10" data-slider-max="1000" data-slider-step="5" data-slider-value="[250,450]" /> <b>€ 1000</b>
            </div>
        </div>

        <div class="col-md-8 col-sm-8">
            <div class="col-md-12 col-sm-6" style="padding-bottom: 10px;"> <img src="@Url.Content("~/images/sam-small.png")" class="img-responsive"> </div>
            <div class="row product-container">
               @foreach(Computer computer in Model.Computers)
               { 
                <div onclick="@("window.location.href='" + @Url.Action("Detail", "Product") + "'");" class="col-lg-6 col-sm-8" style="cursor:pointer;">
                    <div class="hpanel">
                        <div class="panel-body no-padding poluritm">
                            <div class="entry-thumbnailsmall"> <img src="@computer.ImageUrl" class="img-responsive"> </div>
                            <div class="p-sm productdetail">
                                <h4>@computer.Name</h4>
                                <p>@computer.Price</p>
                            </div>
                        </div>
                    </div>
                </div>
               }            
            </div>
        </div>
    </div>
</section>
